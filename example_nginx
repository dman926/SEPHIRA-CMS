# In the Flask site config
# We define a dedicated route for socket io as well as the default root app and serve with NGINX uWSGI

root /path/to/flask

location /socket.io/ {
	proxy_http_version 1.1;
	proxy_set_header Upgrade $http_upgrade;
	proxy_set_header Connection "upgrade";
	include uwsgi_params;
	uwsgi_pass unix:/path/to/site/app.sock;
}
location / {
	include uwsgi_params;
	uwsgi_pass unix:/path/to/site/app.sock;
}

# In the Angular site config

root /path/to/angular/dist/sephira/browser;

location / {
	proxy_pass http://localhost:4000;
	proxy_http_version 1.1;
	proxy_set_header Upgrade $http_upgrade;
	proxy_set_header Connection 'upgrade';
	proxy_set_header Host $host;
	proxy_cache_bypass $http_upgrade;
}

location = /favicon.ico {
	access_log off;
	log_not_found off;
}

location = /robots.txt {
	access_log off;
	log_not_found off;
}

location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
	expires max;
	log_not_found off;
}
